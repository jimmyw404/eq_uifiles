<?xml version = "1.0"?>
<XML ID="EQInterfaceDefinitionLanguage">
	<Schema xmlns="EverQuestData" xmlns:dt="EverQuestDataTypes"/>

	<Listbox item="DH_Item_List">
		<ScreenID>DH_Item_List</ScreenID>
		<DrawTemplate>WDT_Inner</DrawTemplate>
		<AutoStretch>true</AutoStretch>
		<BottomAnchorToTop>false</BottomAnchorToTop>
		<RightAnchorToLeft>false</RightAnchorToLeft>
		<TopAnchorOffset>28</TopAnchorOffset>
		<BottomAnchorOffset>50</BottomAnchorOffset>
		<LeftAnchorOffset>5</LeftAnchorOffset>
		<RightAnchorOffset>5</RightAnchorOffset>
		<Style_Border>true</Style_Border>
		<Style_VScroll>true</Style_VScroll>
		<Columns>
			<Width>24</Width>
			<Heading></Heading>
		</Columns>
		<Columns>
			<Width>200</Width>
			<Heading>Item Name</Heading>
		</Columns>
		<Columns>
			<Width>35</Width>
			<Heading>Qty</Heading>
		</Columns>
	</Listbox>

	<Button item="DH_Inspect_Button">
		<ScreenID>DH_Inspect_Button</ScreenID>
		<AutoStretch>true</AutoStretch>
		<LeftAnchorToLeft>false</LeftAnchorToLeft>
		<RightAnchorToLeft>false</RightAnchorToLeft>
		<TopAnchorOffset>5</TopAnchorOffset>
		<BottomAnchorOffset>25</BottomAnchorOffset>
		<LeftAnchorOffset>139</LeftAnchorOffset>
		<RightAnchorOffset>75</RightAnchorOffset>
		<TooltipReference>Click here to inspect the selected item (R-Click)</TooltipReference>
		<Text>Inspect</Text>
		<Template>BDT_Normal</Template>
	</Button>
	
	<Button item="DH_Preview_Button">
		<ScreenID>DH_Preview_Button</ScreenID>
		<AutoStretch>true</AutoStretch>
		<LeftAnchorToLeft>false</LeftAnchorToLeft>
		<RightAnchorToLeft>false</RightAnchorToLeft>
		<TopAnchorOffset>5</TopAnchorOffset>
		<BottomAnchorOffset>25</BottomAnchorOffset>
		<LeftAnchorOffset>69</LeftAnchorOffset>
		<RightAnchorOffset>5</RightAnchorOffset>
		<TooltipReference>Click here to preview the selected item (Alt R-Click)</TooltipReference>
		<Text>Preview</Text>
		<Template>BDT_Normal</Template>
	</Button>

	<Button item="DH_Selected_Item_Slot">
		<ScreenID>DH_Selected_Item_Slot</ScreenID>
		<AutoStretch>true</AutoStretch>
		<TopAnchorToTop>false</TopAnchorToTop>
		<BottomAnchorToTop>false</BottomAnchorToTop>
		<TopAnchorOffset>45</TopAnchorOffset>
		<BottomAnchorOffset>3</BottomAnchorOffset>
		<LeftAnchorOffset>79</LeftAnchorOffset>
		<RightAnchorOffset>121</RightAnchorOffset>
		<Template>BDT_DragItem</Template>
		<DecalOffset>
			<X>2</X>
			<Y>2</Y>
		</DecalOffset>
		<DecalSize>
			<CX>40</CX>
			<CY>40</CY>
		</DecalSize>
	</Button>

	<Label item="DH_Selected_Item_Label">
		<ScreenID>DH_Selected_Item_Label</ScreenID>
		<AutoStretch>true</AutoStretch>
		<TopAnchorToTop>false</TopAnchorToTop>
		<BottomAnchorToTop>false</BottomAnchorToTop>
		<RightAnchorToLeft>false</RightAnchorToLeft>
		<TopAnchorOffset>43</TopAnchorOffset>
		<BottomAnchorOffset>5</BottomAnchorOffset>
		<LeftAnchorOffset>125</LeftAnchorOffset>
		<RightAnchorOffset>85</RightAnchorOffset>
		<Text>Item Being Considered</Text>
	</Label>

	<Button item="DH_Retrieve_Button">
		<ScreenID>DH_Retrieve_Button</ScreenID>
		<AutoStretch>true</AutoStretch>
		<TopAnchorToTop>false</TopAnchorToTop>
		<BottomAnchorToTop>false</BottomAnchorToTop>
		<TopAnchorOffset>43</TopAnchorOffset>
		<BottomAnchorOffset>5</BottomAnchorOffset>
		<LeftAnchorOffset>5</LeftAnchorOffset>
		<RightAnchorOffset>69</RightAnchorOffset>
		<TooltipReference>Click here to retrieve your item</TooltipReference>
		<Text>Retrieve</Text>
		<Template>BDT_Normal</Template>
	</Button>

	<Button item="DH_Exit_Button">
		<ScreenID>DH_Exit_Button</ScreenID>
		<AutoStretch>true</AutoStretch>
		<TopAnchorToTop>false</TopAnchorToTop>
		<BottomAnchorToTop>false</BottomAnchorToTop>
		<LeftAnchorToLeft>false</LeftAnchorToLeft>
		<RightAnchorToLeft>false</RightAnchorToLeft>
		<TopAnchorOffset>43</TopAnchorOffset>
		<BottomAnchorOffset>5</BottomAnchorOffset>
		<LeftAnchorOffset>69</LeftAnchorOffset>
		<RightAnchorOffset>5</RightAnchorOffset>
		<TooltipReference>Click here to close the Dragon's Hoard window</TooltipReference>
		<Text>Exit</Text>
		<Template>BDT_Normal</Template>
	</Button>

	<Label item="DH_Item_Count_Label">
		<ScreenID>DH_Item_Count_Label</ScreenID>
		<Location>
			<X>5</X>
			<Y>5</Y>
		</Location>
		<Size>
			<CX>128</CX>
			<CY>14</CY>
		</Size>
		<Text>Total Count:</Text>
		<NoWrap>true</NoWrap>
	</Label>

	<Label item="DH_Item_Count_Number">
		<ScreenID>DH_Item_Count_Number</ScreenID>
		<Location>
			<X>128</X>
			<Y>5</Y>
		</Location>
		<Size>
			<CX>64</CX>
			<CY>14</CY>
		</Size>
		<Text>0 / 0</Text>
		<NoWrap>true</NoWrap>
	</Label>

	<Screen item="DragonHoardWnd">
		<RelativePosition>false</RelativePosition>
		<Location>
			<X>0</X>
			<Y>25</Y>
		</Location>
		<Size>
			<CX>398</CX>
			<CY>400</CY>
		</Size>
		<Text>Dragon's Hoard</Text>
		<DrawTemplate>WDT_Rounded</DrawTemplate>
		<Style_Titlebar>true</Style_Titlebar>
		<Style_Qmarkbox>true</Style_Qmarkbox>
		<Style_Closebox>true</Style_Closebox>
		<Style_Minimizebox>false</Style_Minimizebox>
		<Style_Border>true</Style_Border>
		<Style_Sizable>true</Style_Sizable>
		<Pieces>DH_Selected_Item_Label</Pieces>
		<Pieces>DH_Selected_Item_Slot</Pieces>
		<Pieces>DH_Exit_Button</Pieces>
		<Pieces>DH_Retrieve_Button</Pieces>
		<Pieces>DH_Item_Count_Label</Pieces>
		<Pieces>DH_Item_Count_Number</Pieces>
		<Pieces>DH_Inspect_Button</Pieces>
		<Pieces>DH_Preview_Button</Pieces>
		<Pieces>DH_Item_List</Pieces>
	</Screen>


</XML>